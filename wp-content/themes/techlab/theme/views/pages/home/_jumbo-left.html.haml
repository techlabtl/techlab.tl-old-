.tl-jumbo-left.col-xs-12.col-sm-6
  - $pages = retrieve_jumbo_left_pages()
  - foreach($pages as $page)
    - $long_title = get_post_meta($page->ID, 'long_title', true);
    - if ($long_title)
      .row.tl-jumbo-left-sentence-wrap
        .tl-jumbo-left-sentence.col-xs-10.col-xs-offset-1
          %a{:href => "<?php echo get_page_link($page->ID); ?>"}
            = get_post_meta($page->ID, 'long_title', true);
